{
  "manifest_version": 3,
  "name": "Safe Tab Manager",
  "version": "1.0",
  "description": "Only activates when specific tool page is open",
  "permissions": ["tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "128": "icons/icon128.png"
    },
    "default_title": "Safe Tab Manager - Inactive"
  },
  "icons": {
    "128": "icons/icon128.png"
  }
}